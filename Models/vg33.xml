    <offsets>
      <x-m> -1.420 </x-m>
      <y-m> -5.355 </y-m>
      <z-m>  0.039 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Arsenal-VG33/Models/light/StrobeWhite.xml</path>
    <offsets>
      <x-m> -1.420 </x-m>
      <y-m>  5.355 </y-m>
      <z-m>  0.039 </z-m>
    </offsets>
  </model>

</PropertyList>

