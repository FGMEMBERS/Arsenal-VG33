<?xml version="1.0"?>

<PropertyList>

  <path>vg33.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Arsenal-VG33/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>bol</object-name>
    <object-name>echappement</object-name>
    <object-name>helice</object-name>
    <object-name>air</object-name>
    <object-name>air2</object-name>
    <object-name>armes</object-name>
    <object-name>pito</object-name>
    <object-name>cockpit</object-name>
    <object-name>aile</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>patte</object-name>
    <object-name>axeGA</object-name>
    <object-name>axeGB</object-name>
    <object-name>porteG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeDA</object-name>
    <object-name>axeDB</object-name>
    <object-name>porteD</object-name>
    <object-name>roueD</object-name> 
    <object-name>tourvitre</object-name>
    <object-name>tourverriere</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
    <object-name>verriere</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <object-name>verriere</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>bol</object-name>
    <object-name>echappement</object-name>
    <object-name>helice</object-name>
    <object-name>air</object-name>
    <object-name>air2</object-name>
    <object-name>armes</object-name>
    <object-name>pito</object-name>
    <object-name>cockpit</object-name>
    <object-name>aile</object-name>
    <object-name>aile2</object-name>
    <object-name>derive</object-name>
    <object-name>patte</object-name>
    <object-name>axeGA</object-name>
    <object-name>axeGB</object-name>
    <object-name>porteG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeDA</object-name>
    <object-name>axeDB</object-name>
    <object-name>porteD</object-name>
    <object-name>roueD</object-name> 
    <object-name>tourvitre</object-name>
    <object-name>tourverriere</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <!-- Effets de tir -->
  <!-- Gauche extérieur -->
  <model>
    <path>Aircraft/Arsenal-VG33/Models/Effects/fire.xml</path>
    <offsets>
      <x-m> -1.956 </x-m>
      <y-m> -2.428 </y-m>
      <z-m> -0.219 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> 180.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Gauche intérieur -->
  <model>
    <path>Aircraft/Arsenal-VG33/Models/Effects/fire.xml</path>
    <offsets>
      <x-m> -1.985 </x-m>
      <y-m> -2.308 </y-m>
      <z-m> -0.225 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> 180.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Droite extérieur -->
  <model>
    <path>Aircraft/Arsenal-VG33/Models/Effects/fire.xml</path>
    <offsets>
      <x-m> -1.958 </x-m>
      <y-m>  2.428 </y-m>
      <z-m> -0.219 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> 180.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Droite intérieur -->
  <model>
    <path>Aircraft/Arsenal-VG33/Models/Effects/fire.xml</path>
    <offsets>
      <x-m> -1.985 </x-m>
      <y-m>  2.308 </y-m>
      <z-m> -0.225 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> 180.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Canon moteur -->
  <model>
    <path>Aircraft/Arsenal-VG33/Models/Effects/fire.xml</path>
    <offsets>
      <x-m> -4.030 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.043 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg> 180.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Interieur -->
  <model>
    <path>Aircraft/Arsenal-VG33/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>900</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>300.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>900.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>900</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.987 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.043 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -0.832 </x1-m>
      <y1-m> -2.492 </y1-m>
      <z1-m> -0.216 </z1-m>
      <x2-m> -1.022 </x2-m>
      <y2-m> -4.617 </y2-m>
      <z2-m> -0.031 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -1.022 </x1-m>
      <y1-m>  4.617 </y1-m>
      <z1-m> -0.031 </z1-m>
      <x2-m> -0.832 </x2-m>
      <y2-m>  2.492 </y2-m>
      <z2-m> -0.216 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m> 3.190 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.244 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m> 3.525 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.887 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-40.0</factor>
    <axis>
      <x1-m> -0.686 </x1-m>
      <y1-m> -0.625 </y1-m>
      <z1-m> -0.531 </z1-m>
      <x2-m> -0.832 </x2-m>
      <y2-m> -2.492 </y2-m>
      <z2-m> -0.303 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>-40.0</factor>
    <axis>
      <x1-m> -0.832 </x1-m>
      <y1-m>  2.492 </y1-m>
      <z1-m> -0.303 </z1-m>
      <x2-m> -0.686 </x2-m>
      <y2-m>  0.625 </y2-m>
      <z2-m> -0.531 </z2-m>
    </axis>
  </animation>

  <!-- Rentrée des roues -->
  <animation>
    <type>rotate</type>
    <object-name>axeGA</object-name>
    <object-name>axeGB</object-name>
    <object-name>porteG</object-name>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 85.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.481 </x-m>
      <y-m> -1.942 </y-m>
      <z-m> -0.260 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeDA</object-name>
    <object-name>axeDB</object-name>
    <object-name>porteD</object-name>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind> 0.70 </ind>
        <dep> 0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 85.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.481 </x-m>
      <y-m>  1.942 </y-m>
      <z-m> -0.260 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>translate</type>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.300 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.300 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.484 </x-m>
      <y-m> -1.944 </y-m>
      <z-m> -1.341 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.484 </x-m>
      <y-m>  1.944 </y-m>
      <z-m> -1.341 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Canopy -->
  <animation>
    <type>translate</type>
    <object-name>tourverriere</object-name>
    <object-name>verriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 0.75 </factor>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

</PropertyList>

